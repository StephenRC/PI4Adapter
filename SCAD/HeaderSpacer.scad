include <bosl2/std.scad>
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
$fn=100;
PCBThickness=1.5;
Width=6.5;
Length=38;
Offset=1; // amount above pcb to solder
SolderHeight=13-Offset-PCBThickness;
Clearance=0.2;
PinDiameter=0.7+Clearance;
PinOffset=2.54;
KeyTabWidth=3.5;
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

Spacer(2,6); // 6mm is for inserting into the headerSocket

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module Spacer(Qty=1,Height=SolderHeight) {
	for(x=[0:Qty-1]) {
		translate([0,x*(Width+2),0]) difference() {
			union() {
				color("cyan") cuboid([Length,Width,Height],rounding=1);
				translate([-KeyTabWidth/2+2,Width/2,0]) KeyTab(Height);
			}
			translate([15,-Width/4+0.25,0]) {
				translate([-Length/2+3.7,0,0]) PinSlot(Height);
				translate([-Length/2+3.7,PinOffset,0]) PinSlot(Height);
			}
		}
	}
}

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module PinSlot(Height=SolderHeight) {
	color("red") cuboid([13*2.54,PinDiameter,Height*2]);
}

/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module KeyTab(Height=SolderHeight/2) {
	color("blue") cuboid([KeyTabWidth,2,Height],rounding=0.5);
}

